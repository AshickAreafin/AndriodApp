<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@android:color/black"
    android:gravity="center"
    tools:context=".AddBankActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Your Bank"
            android:textAllCaps="false"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"


            />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@android:color/black"
        android:gravity="center"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:clipToPadding="false"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_margin="5dp"
                android:id="@+id/bracBankCardViewId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView

                        android:padding="5dp"
                        android:layout_width="65dp"
                        android:layout_height="45dp"
                        android:src="@drawable/brac_bank"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@android:color/holo_orange_dark"
                        />
                    <TextView
                        android:id="@+id/bracBankTextViewId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/option11"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAppearance="?android:textAppearanceLarge"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_margin="5dp"
                android:id="@+id/cityBankCardViewId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView

                        android:padding="5dp"
                        android:layout_width="65dp"
                        android:layout_height="45dp"
                        android:src="@drawable/city_bank"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@android:color/holo_orange_dark"
                        />
                    <TextView
                        android:id="@+id/cityBankTextViewId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/option12"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAppearance="?android:textAppearanceLarge"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:clipToPadding="false"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_margin="5dp"
                android:id="@+id/dhakaBankCardViewId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView

                        android:padding="5dp"
                        android:layout_width="65dp"
                        android:layout_height="45dp"
                        android:src="@drawable/dhaka_bank"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@android:color/holo_orange_dark"
                        />
                    <TextView
                        android:id="@+id/dhakaBankTextViewId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/option13"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAppearance="?android:textAppearanceLarge"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_margin="5dp"
                android:id="@+id/dutchBanglaBankCardViewId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView

                        android:padding="5dp"
                        android:layout_width="65dp"
                        android:layout_height="45dp"
                        android:src="@drawable/dutch_bangla_bank"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@android:color/holo_orange_dark"
                        />
                    <TextView
                        android:id="@+id/dutchBanglaBankTextViewId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/option14"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAppearance="?android:textAppearanceLarge"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:clipToPadding="false"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_margin="5dp"
                android:id="@+id/bankAsiaCardViewId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView

                        android:padding="5dp"
                        android:layout_width="65dp"
                        android:layout_height="45dp"
                        android:src="@drawable/bank_asia"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@android:color/holo_orange_dark"
                        />
                    <TextView
                        android:id="@+id/bankAsiaTextViewId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/option15"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAppearance="?android:textAppearanceLarge"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_margin="5dp"
                android:id="@+id/mutualTrustBankCardViewId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView

                        android:padding="5dp"
                        android:layout_width="65dp"
                        android:layout_height="45dp"
                        android:src="@drawable/mutual_trust_bank"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@android:color/holo_orange_dark"
                        />
                    <TextView
                        android:id="@+id/mutualTrustBankTextViewId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/option16"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAppearance="?android:textAppearanceLarge"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>