<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".MobileRechargeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Your Operator :"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textAlignment="center"

            />
        <View
            android:layout_width="250sp"
            android:layout_height="1dp"
            android:background="@android:color/holo_green_dark"
            />
        <Spinner
            android:id="@+id/mobileOperatorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            >

        </Spinner>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Style:"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textAlignment="center"

            />
        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="@android:color/holo_green_dark"
            />
        <Spinner
            android:id="@+id/styleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            >
        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Your Mobile Number :"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textAlignment="center"


            />
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@android:color/holo_green_dark"
            />

        <EditText
            android:id="@+id/mobileNumberEditTextId"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textAlignment="center"
            android:inputType="number"
            android:layout_marginBottom="10dp"

            />







        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Amount(tk) :"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textAlignment="center"

            />
        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="@android:color/holo_green_dark"
            />

        <EditText
            android:id="@+id/amountEditTextId"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textAlignment="center"
            android:inputType="number"
            android:layout_marginBottom="10dp"

            />
        <Button
            android:id="@+id/okBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textAlignment="center"
            android:inputType="number"
            android:layout_marginBottom="10dp"

            />

        <TextView
            android:id="@+id/showDetailsId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"

            />


    </LinearLayout>






</ScrollView>